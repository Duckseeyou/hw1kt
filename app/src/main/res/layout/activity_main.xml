<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/pudge_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/email_edit_text" />
    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:background="#B2BEB5"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/subject_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Send to: email@example.com"
        android:paddingLeft="28dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/subject_edit_text"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="#B2BEB5"
        app:layout_constraintBottom_toTopOf="@id/message_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Subject"
        android:paddingLeft="28dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/message_edit_text"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:background="#B2BEB5"
        app:layout_constraintBottom_toTopOf="@id/send_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Text"
        android:paddingLeft="28dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_btn"
        android:layout_width="96dp"
        android:layout_marginTop="360dp"
        android:layout_height="48dp"
        android:text="Send"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity2_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="48dp"
        android:layout_height="48dp"
        android:text="Screen 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>